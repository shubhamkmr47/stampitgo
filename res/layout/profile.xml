<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp" >

        <EditText
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_text_bg"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/profile_text_color" />

        <EditText
            android:id="@+id/profilePhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profileName"
            android:layout_marginTop="15dp"
            android:background="@drawable/profile_text_bg"
            android:inputType="phone"
            android:padding="15dp"
            android:textColor="@color/profile_text_color" />

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profilePhone"
            android:layout_marginTop="15dp"
            android:background="@drawable/profile_text_bg"
            android:padding="15dp"
            android:textSize="18sp"
            android:textColor="@color/profile_text_color" />

        <TextView
            android:id="@+id/birth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/profileEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Add your Birthday for Extra Rewards"
            android:textColor="#8A8A8A"
            android:textSize="18sp" />

         <RelativeLayout
            android:id="@+id/birthday_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/birth"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/profile_date"
                    android:layout_width="62.5dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/profile_birthday_bg"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_date"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Date"
                    android:textColor="#C5C5C5"
                    android:textSize="20sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/relativeLayout1"
                android:text="/"
                android:textColor="#C5C5C5"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/s1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/profile_month"
                    android:layout_width="62.5dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/profile_birthday_bg"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_month"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Month"
                    android:textColor="#C5C5C5"
                    android:textSize="20sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/relativeLayout2"
                android:text="/"
                android:textColor="#C5C5C5"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/s2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/profile_year"
                    android:layout_width="62.5dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/profile_birthday_bg"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_year"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Year"
                    android:textColor="#C5C5C5"
                    android:textSize="20sp" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/birthday_layout"
            android:layout_marginTop="50dp"
            android:background="@drawable/redbutton"
            android:text="Update"
            android:textColor="#FFFFFF" />
        
        <Button
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/update"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/redbutton"
            android:text="Change Password"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</ScrollView>