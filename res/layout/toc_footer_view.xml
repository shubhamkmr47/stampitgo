<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F6F6"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp" >

    <TextView
        android:id="@+id/toc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:text="T&amp;C"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/restaurant_details_listview_text_color" />

    <TextView
        android:id="@+id/toc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toc_label"
        android:layout_marginLeft="25dp"
        android:text="TOC Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/restaurant_details_listview_text_color" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_icon_toc" />

</RelativeLayout>